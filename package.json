  "homepage": "https://github.com/epam-nodejs-program-2021-03-01/crud-app-example#readme",
  "engines": {
    "node": "14.x"
  },
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "clean": "del-cli dist/*",
    "prebuild": "npm run clean",
    "build": "tsc --project ./tsconfig.production.json",
    "postbuild": "del-cli dist/**/*.type.js* dist/typings",
    "lint": "eslint --ext .js,.ts src",
    "start": "node --require ./env/production.js dist/index.js",
    "dev": "nodemon --ext json,ts --require ./env/development.ts src/index.ts",
    "play": "nodemon --ext json,ts --require ./env/development.ts src/playground.ts"
  },
  "devDependencies": {
    "@types/express": "4.17.11",
    "@types/pg": "7.14.11",
    "@types/uuid": "8.3.0",
    "@typescript-eslint/eslint-plugin": "4.22.0",
    "@typescript-eslint/parser": "4.22.0",
    "del-cli": "3.0.1",
    "eslint": "7.24.0",
    "nodemon": "2.0.7",
    "ts-node": "9.1.1",
    "typescript": "4.2.4"
  },
  "dependencies": {
    "dotenv-extended": "2.9.0",
    "express": "4.17.1",
    "express-allow-methods": "0.1.0",
    "express-joi-validation": "5.0.0",
    "joi": "17.4.0",
    "pg": "8.6.0",
    "pg-hstore": "2.3.3",
    "sequelize": "6.6.2"
  }
