{
  "name": "crud-app-example",
  "version": "0.0.1",
  "description": "Example of a CRUD Node.JS Express server",
  "license": "MIT",
  "private": true,
  "repository": {
    "type": "git",
    "url": "git+https://github.com/epam-nodejs-program-2021-03-01/crud-app-example.git"
  },
  "bugs": {
    "url": "https://github.com/epam-nodejs-program-2021-03-01/crud-app-example/issues"
  },
  "homepage": "https://github.com/epam-nodejs-program-2021-03-01/crud-app-example#readme",
  "engines": {
    "node": "14.x"
  },
  "scripts": {
    "test": "jest",
    "test:unit": "jest --config test/config.unit.ts",
    "test:integration": "jest --config test/config.integration.ts",
    "clean": "del-cli dist/*",
    "prebuild": "npm run clean",
    "build": "tsc --project ./tsconfig.production.json",
    "postbuild": "del-cli dist/**/*.type.js* dist/**/typings/**/*.js*",
    "lint": "eslint --ext .js,.ts src",
    "FIXME:": "change ./env/common to ./env/remote",
    "start": "node --require ./env/common.js dist/index.js",
    "dev": "nodemon --ext json,ts --require ./env/local.ts src/index.ts",
    "preplay": "touch src/playground.ts",
    "play": "nodemon --ext json,ts --require ./env/local.ts src/playground.ts"
  },
  "devDependencies": {
    "@types/express": "4.17.11",
    "@types/express-request-id": "1.4.1",
    "@types/jest": "26.0.23",
    "@types/jsonwebtoken": "8.5.1",
    "@types/morgan": "1.9.2",
    "@types/ms": "0.7.31",
    "@types/pg": "7.14.11",
    "@types/promise-timeout": "1.3.0",
    "@types/supertest": "2.0.11",
    "@types/uuid": "8.3.0",
    "@typescript-eslint/eslint-plugin": "4.22.0",
    "@typescript-eslint/parser": "4.22.0",
    "del-cli": "3.0.1",
    "eslint": "7.24.0",
    "jest": "26.6.3",
    "nodemon": "2.0.7",
    "ts-jest": "26.5.6",
    "ts-node": "9.1.1",
    "typescript": "4.2.4"
  },
  "dependencies": {
    "celebrate": "14.0.0",
    "dotenv-extended": "2.9.0",
    "express": "4.17.1",
    "express-allow-methods": "0.1.0",
    "joi": "17.4.0",
    "pg": "8.6.0",
    "pg-hstore": "2.3.3",
    "promise-timeout": "1.3.0",
    "sequelize": "6.6.2",
    "source-map-support": "0.5.19",
    "supertest": "6.1.3",
    "winston": "3.3.3",
    "winston-console-format": "1.0.8"
  }
