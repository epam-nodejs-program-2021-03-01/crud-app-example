{
	"compilerOptions": {
		// Output
		"target": "es2015",
		"module": "commonjs",
		"outDir": "dist",
		"inlineSources": true,
		"sourceMap": true,

		// Development
		"strict": true,
		"downlevelIteration": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"resolveJsonModule": true,
		"importsNotUsedAsValues": "error",
	},
}
