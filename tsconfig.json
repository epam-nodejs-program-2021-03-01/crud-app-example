{
	"ts-node": {
		"files": true,
	},
	"compilerOptions": {
		// Output
		"target": "es2015",
		"module": "commonjs",
		"outDir": "dist",
		"inlineSources": true,
		"sourceMap": true,
		"noEmitOnError": true,

		// Development
		"checkJs": true,
		"strict": true,
		"noUnusedLocals": true,
		"downlevelIteration": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"resolveJsonModule": true,
		"importsNotUsedAsValues": "error",
	},
}
